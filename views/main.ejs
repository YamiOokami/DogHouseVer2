<%- include('partials/header'); -%>

<!-- title -->

<div class="row">
  <div class="col-lg-6">
    <h1><%= main.title %></h1>
    <h3 class="description"><%= main.paragraph %></h3>
    <% if (lang === "en") { %>
      <button type="button" class="btn btn-danger btn-md header-button"><i class="fab fa-youtube"></i><a href=<%= main.link1 %> > Follow us on YouTube</a></button>
      <button type="button" class="btn btn-md  btn-instagram header-button"><i class="fab fa-instagram"></i><a href=<%= main.link2 %> > Follow us on Instegram</a></button>
      <button type="button" class="btn btn-md  btn-facebook header-button"><i class="fab fa-facebook"></i><a href=<%= main.link3 %> > Follow us on Facebook</a></button>  
    <% } else { %>
    <button type="button" class="btn btn-danger btn-md header-button"><i class="fab fa-youtube"></i><a href=<%= main.link1 %> > עקבו אחרינו ביוטוב</a></button>
    <button type="button" class="btn btn-md  btn-instagram header-button"><i class="fab fa-instagram"></i><a href=<%= main.link2 %> > עקבו אחרינו באינסטגרם</a></button>
    <button type="button" class="btn btn-md  btn-facebook header-button"><i class="fab fa-facebook"></i><a href=<%= main.link3 %> > עקבו אחרינו בפייסבוק</a></button>
    <% } %> 
    <br>
    <button type="button" class="btn btn-dark btn-lg header-button" id="ourmusic-btn"><a href="#ourmusic"> <%= ourmusic.title %> </a></button>
    <button type="button" class="btn btn-dark btn-lg header-button" id="shows-btn"><a href="#shows"><%= shows.title %> </a></button>
  </div>
  <div class="col-lg-6">
    <div class="embed-responsive embed-responsive-16by9 border-embed">
      <iframe class="embed-responsive-item" src=<%= main.link %>  allowfullscreen></iframe>
    </div>
  </div>
</div>
</div>
</section>

<!-- Newsletter -->

<section id="newsletter">
  <h2 class="newsletter-title">
    <%= news.title %> 
  </h2>
  <div class="container-fluid">
    <form action="/news" method="post">
      <div class="form-row justify-content-md-center">
        <% if (lang === "en") { %>
          <div class="col-auto">
            <label class="sr-only" for="inlineFormInput">First Name</label>
            <input type="text" name="fName" class="form-control mb-2" id="inlineFormInput" placeholder="First Name">
          </div>
          <div class="col-auto">
            <label class="sr-only" for="inlineFormInput">Last Name</label>
            <input type="text" name="lName" class="form-control mb-2" id="inlineFormInput" placeholder="Last Name">
          </div>
          <div class="col-auto">
            <label class="sr-only" for="inlineFormInputGroup">Email</label>
            <div class="input-group mb-2">
              <input type="text" name="email" class="form-control" id="inlineFormInputGroup" placeholder="Email">
            </div>
          </div>
          <div class="col-auto">
            <button type="submit" class="btn btn-success mb-2 newsub">Send</button>
          </div>
        <% } else { %>
        <div class="col-auto">
          <label class="sr-only" for="inlineFormInput">שם פרטי</label>
          <input type="text" name="fName" class="form-control mb-2" id="inlineFormInput" placeholder="שם פרטי">
        </div>
        <div class="col-auto">
          <label class="sr-only" for="inlineFormInput">שם משפחה</label>
          <input type="text" name="lName" class="form-control mb-2" id="inlineFormInput" placeholder="שם משפחה">
        </div>
        <div class="col-auto">
          <label class="sr-only" for="inlineFormInputGroup">מייל</label>
          <div class="input-group mb-2">
            <input type="text" name="email" class="form-control" id="inlineFormInputGroup" placeholder="מייל">
          </div>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-success mb-2 newsub">שלח</button>
        </div>
        <% } %> 
      </div>
    </form>
  </div>
</section>

<!-- ourmusic -->

<section id="ourmusic">
  <h2 class="ourmusic-title">
    <%= ourmusic.title %> 
  </h2>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 music-embed">
        <div class="embed-responsive embed-responsive-16by9 border-embed">
          <iframe width="560" height="315" src=<%= ourmusic.link %>  frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        </div>
      </div>
      <div class="col-lg-6 music-embed">
        <div class="embed-responsive embed-responsive-16by9 border-embed">
          <iframe src=<%= ourmusic.link1 %>  width="300" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- shows -->

<section id="shows">
  <img src="images/dogbow.png" alt="dog looking down" class="shows-dogbow">
  <h2 class="shows-title">
    <%= shows.title %> 
  </h2>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6">
        <div id="carouselshows" class="carousel slide" data-ride="false" data-keyboard="true" data-pause="hover" data-interval="10000">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="show-image" src="images/doghouselogo.png" alt="doghouselogo">
            </div>
              <% images.forEach(function(image){ %>
                <div class="carousel-item">
                <img class="show-image" src="uploads/images/<%= image.img %> " alt="Image">
              </div>
             <% }) %> 
          </div>
          <a class="carousel-control-prev" href="#carouselshows" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselshows" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="col-lg-6">
        <ul class="list-group list-group-flush shows-time">
          <% if (lang === "en") { %>
            <li class="list-group-item"><%= shows.paragraph %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link %>>Order tickets </a></button></li>
            <li class="list-group-item"><%= shows.paragraph1 %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link1 %>>Order tickets </a></button></li>
            <li class="list-group-item"><%= shows.paragraph2 %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link2 %>>Order tickets </a></button></li>
            <li class="list-group-item"><%= shows.paragraph3 %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link3 %>>Order tickets </a></button></li>
            <li class="list-group-item"><%= shows.paragraph4 %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link4 %>>Order tickets </a></button></li> 
          <% } else { %>
          <li class="list-group-item"><%= shows.paragraph %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link %>>הזמן כרטיסים עכשיו</a></button></li>
          <li class="list-group-item"><%= shows.paragraph1 %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link1 %>>הזמן כרטיסים עכשיו</a></button></li>
          <li class="list-group-item"><%= shows.paragraph2 %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link2 %>>הזמן כרטיסים עכשיו</a></button></li>
          <li class="list-group-item"><%= shows.paragraph3 %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link3 %>>הזמן כרטיסים עכשיו</a></button></li>
          <li class="list-group-item"><%= shows.paragraph4 %> <button type="button" class="btn btn-outline-success btn-sm shows-button"><a href=<%= shows.link4 %>>הזמן כרטיסים עכשיו</a></button></li>
          <% } %> 
        </ul>
      </div>
    </div>
    <img src="images/dog149300.svg" alt="dog looking up" class="shows-doglookup">
  </div>
</section>

<%- include('partials/footer'); -%>
