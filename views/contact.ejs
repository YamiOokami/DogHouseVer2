<div class="container-fluid">
<section id="contact">
  <% if (lang === "en") { %>
    <h1 class="contact-title">Contact Us</h1>
    <h3 class="contact-title">Please leave us any message using the form below:</h3>
    <form action="/contact" method="post">
      <div>
        <div class="row justify-content-center">
          <label for=contactName class="col-lg-1.5 col-form-label">Name:</label>
          <div class="col-lg-3">
            <input type="text" name="userName" class="form-control" id="contactName" placeholder="John Doe" required>
          </div>
        </div>
        <div class="row justify-content-center">
          <label for="contactEmail" class="col-lg-1.5 col-form-label">Email:</label>
          <div class="col-lg-4">
            <input type="email" name="userEmail" class="form-control" id="contactEmail" placeholder="name@example.com" required>     
          </div>
        </div>
        <div class="row justify-content-center">
          <label for="cnontactMessage" class="col-lg-1.5 col-form-label d-flex align-items-center">Message:</label>
          <div class="col-lg-6">
              <textarea name="userMessage" class="form-control" id="cnontactMessage" rows="6" required></textarea>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-lg-3">
            <button type="submit" class="btn btn-success" name="button">Send</button>
          </div>
        </div>
      </div>
  <% } else { %>
  <h1 class="contact-title">יצירת קשר</h1>
    <h3>מוזמנים להשאיר לנו הודעה באמצעות הטופס הבא:</h3>
    <form action="/contact" method="post">
      <div>
        <div class="row justify-content-center">
          <label for=contactName class="col-lg-1.5 col-form-label">שם השולח:</label>
          <div class="col-lg-3">
            <input type="text" name="userName" class="form-control" id="contactName" placeholder="ישראל ישראלי" required>
          </div>
        </div>
        <div class="row justify-content-center">
          <label for="contactEmail" class="col-lg-1.5 col-form-label">כתובת דוא"ל לחזרה:</label>
          <div class="col-lg-4">
            <input type="email" name="userEmail" class="form-control" id="contactEmail" placeholder="name@example.com" required>     
          </div>
        </div>
        <div class="row justify-content-center">
          <label for="cnontactMessage" class="col-lg-1.5 col-form-label d-flex align-items-center">הודעה להעביר:</label>
          <div class="col-lg-6">
              <textarea name="userMessage" class="form-control" id="cnontactMessage" rows="6" required></textarea>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-lg-3">
            <button type="submit" class="btn btn-success" name="button">שלח</button>
          </div>
        </div>
      </div>
      <% } %> 
    </form>
</section>
</div>



<%- include('partials/footer'); -%>
